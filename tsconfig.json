{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "types": [
      "node",
      "express"
    ],
    "lib": [
      "es6",
      "es2015.promise"
    ],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "./lib/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}